<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="caleb.login.ActivityMemorama">

    <ImageButton
        android:id="@+id/boton1"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:adjustViewBounds="true"
        android:onClick="adivinar"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/boton2"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/boton2"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginEnd="36dp"
        android:adjustViewBounds="true"
        android:onClick="adivinar"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/boton1"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/boton3"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:onClick="adivinar"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/boton4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/boton1"
        app:layout_constraintTop_toBottomOf="@+id/boton1"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/boton4"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:onClick="adivinar"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton2"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/boton5"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:onClick="adivinar"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/boton6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/boton1"
        app:layout_constraintTop_toBottomOf="@+id/boton3"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/boton6"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:onClick="adivinar"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton4"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <Button
        android:id="@+id/reinicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Reiniciar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
